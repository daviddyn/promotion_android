<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <edu.neu.promotion.views.FixedGridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:gridHeight="@dimen/tool_item_height"
        app:columnCount="4"
        android:layout_margin="@dimen/tool_item_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_b"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_i"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_u"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_s"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_superscript"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_subscript"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            app:layout_columnSpan="2"
            android:layout_margin="@dimen/tool_item_margin"
            android:gravity="center_vertical"
            android:text="原始大小"
            android:drawablePadding="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:drawableStartCompat="@drawable/ic_tool_font_size" />

        <LinearLayout
            app:layout_columnSpan="2"
            android:layout_margin="@dimen/tool_item_margin"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <ImageView
                android:src="@drawable/ic_tool_text_color"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="#FFFF0000"
                android:layout_marginStart="16dp"
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:layout_height="16dp" />

        </LinearLayout>

        <LinearLayout
            app:layout_columnSpan="2"
            android:layout_margin="@dimen/tool_item_margin"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <ImageView
                android:src="@drawable/ic_tool_text_background"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="#FFFF0000"
                android:layout_marginStart="16dp"
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:layout_height="16dp" />

        </LinearLayout>

    </edu.neu.promotion.views.FixedGridLayout>

</ScrollView>