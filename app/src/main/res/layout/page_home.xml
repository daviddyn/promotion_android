<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/items_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/card_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/home_my_functions"
                android:textSize="15sp"
                android:textColor="@color/text_tertiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <edu.neu.promotion.views.FixedGridLayout
                xmlns:fixedGridLayout="http://schemas.android.com/apk/res-auto"
                fixedGridLayout:columnCount="4"
                fixedGridLayout:gridHeight="96dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/ripple"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageView
                        android:scaleType="center"
                        android:background="@drawable/button_primary_normal_background"
                        android:src="@drawable/ic_actionbar_menu"
                        android:layout_width="@dimen/function_icon_dimen"
                        android:layout_height="@dimen/function_icon_dimen" />

                    <TextView
                        android:text="宣传计划"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/function_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    fixedGridLayout:layout_columnSpan="1"
                    android:gravity="center"
                    android:background="@drawable/ripple"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                    <ImageView
                        android:scaleType="center"
                        android:background="@drawable/button_primary_normal_background"
                        android:src="@drawable/ic_actionbar_menu"
                        android:layout_width="@dimen/function_icon_dimen"
                        android:layout_height="@dimen/function_icon_dimen" />

                    <TextView
                        android:text="我的组员"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/function_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </edu.neu.promotion.views.FixedGridLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>