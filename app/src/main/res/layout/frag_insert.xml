<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <edu.neu.promotion.views.FixedGridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:gridHeight="@dimen/tool_item_height"
        app:columnCount="4"
        android:layout_margin="@dimen/tool_item_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_image"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_quote"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:layout_margin="@dimen/tool_item_margin"
            android:src="@drawable/ic_tool_link"
            android:scaleType="center"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            app:layout_columnSpan="2"
            android:layout_margin="@dimen/tool_item_margin"
            android:gravity="center_vertical"
            android:text="列表"
            android:drawablePadding="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:drawableStartCompat="@drawable/ic_tool_item_number" />

        <TextView
            app:layout_columnSpan="2"
            android:layout_margin="@dimen/tool_item_margin"
            android:gravity="center_vertical"
            android:text="项目号"
            android:drawablePadding="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/card_background"
            android:translationZ="@dimen/tool_item_translate_z"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:drawableStartCompat="@drawable/ic_tool_item" />

    </edu.neu.promotion.views.FixedGridLayout>

</ScrollView>
