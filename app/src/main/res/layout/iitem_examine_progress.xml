<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:drawableStart="@drawable/ic_examine_inprogress"
        android:text="进度6"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/text_tertiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/examine_time_line"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/examine_icon_dimen"
        android:layout_height="@dimen/examine_icon_margin"
        app:tint="@color/gray" />

    <TextView
        android:drawableStart="@drawable/ic_examine_denied"
        android:text="进度5"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/critical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/examine_time_line"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/examine_icon_dimen"
        android:layout_height="@dimen/examine_icon_margin"
        app:tint="@color/critical" />

    <TextView
        android:drawableStart="@drawable/ic_examine_passed"
        android:text="进度4"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/examine_time_line"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/examine_icon_dimen"
        android:layout_height="@dimen/examine_icon_margin"
        app:tint="@color/positive" />

    <TextView
        android:drawableStart="@drawable/ic_examine_passed"
        android:text="进度3"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/examine_time_line"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/examine_icon_dimen"
        android:layout_height="@dimen/examine_icon_margin"
        app:tint="@color/positive" />

    <TextView
        android:drawableStart="@drawable/ic_examine_passed"
        android:text="进度2"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/examine_time_line"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/examine_icon_dimen"
        android:layout_height="@dimen/examine_icon_margin"
        app:tint="@color/positive" />

    <TextView
        android:drawableStart="@drawable/ic_examine_passed"
        android:text="进度1"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:textColor="@color/positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>