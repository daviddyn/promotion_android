<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/item_split_bar"
    android:layout_marginBottom="@dimen/navigate_content_elem_margin"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameCardView"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:textColor="@color/on_primary"
        android:textSize="12sp"
        android:gravity="center" />

    <RelativeLayout
        android:layout_marginStart="12dp"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/nameView"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/leftSubTextView"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/actionView"
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_marginStart="12dp"
        android:background="@drawable/round_button_critical"
        android:src="@drawable/ic_page_button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>