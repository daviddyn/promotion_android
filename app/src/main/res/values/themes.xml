<resources>

    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- 标题栏颜色 -->
        <item name="colorPrimary">@color/window_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 状态栏、导航栏颜色 -->
        <item name="colorPrimaryDark">@color/window_background</item>
        <item name="android:colorPrimaryDark">@color/window_background</item>
        <item name="android:statusBarColor">@color/window_background</item>

        <!-- 窗口背景颜色 -->
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorSurface">@color/card</item>

        <!-- 元素颜色 -->
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/split_bar</item>
        <item name="android:textColorHint">@color/split_bar</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
    </style>

