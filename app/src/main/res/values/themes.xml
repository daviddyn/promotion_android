        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:colorAccent">@color/primary</item>

        <item name="android:windowAnimationStyle">@style/BottomDialogTheme.Animation</item>
    </style>

    <style name="BottomDialogTheme.Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_hide_bottom</item>
    </style>

